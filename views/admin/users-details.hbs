

<div class="text-center mt-5 me-1"><h1>User Details</h1></div>
<div class="container ">
    <nav class="navbar clrww ">
  <div class="container-fluid mt-3">
    <form action="/admin/users-details" method="POST" class="d-flex" role="search">
      <input class="form-control me-2" value="{{usersFind.[0].Name}}" name="Name" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-dark" type="submit">Search</button>
    
    </form>
      <div class="float-end">
    <a href="/admin/add-user"><button class="btn btn-primary rounded-pill" type="submit">Add New</button></a>
    </div>
  </div>
  
</nav>
</div>

<div class="container mt-1">
   <table class="table shadow p-3 mb-5 bg-body rounded p-3 align-middle text-center" >
  <thead class="clrww">
    <tr>
       <th scope="col">No</th>
       <th scope="col">Name</th>
       <th scope="col">Email ID</th>
       <th scope="col">Password</th>
       <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody class="clrwh">
  {{#if usersFind}}
   {{#each usersFind}}
    <tr>
      <th>{{@index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Email}}</td>
      <td>{{this.Password}}</td>
      <td class="text-center">
        <a href="/admin/edit-user/{{this._id}}"><button type="button" class="btn btn-outline-primary rounded-pill">Edit</button></a>
        <a href="/admin/delete-user/{{this._id}}" onclick="return confirmDelete('{{this.Name}}')"><button type="button" class="btn btn-outline-primary rounded-pill">Delete</button></a>
      </td>
    </tr>
   {{/each}}
  {{/if}}
   {{#each users}}
    <tr>
      <th>{{@index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Email}}</td>
      <td>{{this.Password}}</td>
      <td class="text-center">
        <a href="/admin/edit-user?id={{this._id}}"><button type="button" class="btn btn-outline-primary rounded-pill">Edit</button></a>
        <a href="/admin/delete-user/{{this._id}}"><button type="button" onclick="return confirmDelete()"  class="btn btn-outline-primary rounded-pill">Delete</button></a>


        
      </td>
    </tr>
   {{/each}}
  </tbody>
</table>
</div>

